{% extends '_includes/index.html.twig' %}

{% block title %}Transmission{% endblock %}

{% block page_content %}
    <section class="py-50 bg-white">
        <div class="container">
            <div class="row">
                {% for a in commune %}
                   
               <div class="col-lg-3 col-md-6 col-12">
                    <a class="box bg-img text-center py-50 pull-up" href="javascript:void(0)" style="background-image: url({{ asset('uploads/images/'~ a.image) }})">
                        <div class="box-body">
                            <span class="badge badge-primary">{{ a.title }}</span>
                        </div>
                        <div class="box-body py-15 bg-black-70 rounded-0">
                            <h4 class="text-white">Backend</h4>
                        </div>
                    </a>
                </div>
                   {# <img src="{{ uploads/images/'~ a.image }}">#}
                {% endfor %}

            </div>
        </div>
    </section>
{% endblock %}
