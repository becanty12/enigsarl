{% extends '_includes/indexe.html.twig' %}
{% from 'macros/image.html.twig' import image %}

{% block title %}Transmission{% endblock %}


{% block page_content %}
	{% form_theme form 'widget/fields-block.html.twig' %}

    <section class="py-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-12 col-12" style="margin: auto">
                    <div class="box" >
                        <div class="box-body" >
                            <div class="widget">
                                <h4 class="mt-0 pb-15 mb-25 bb-1">Cr√©ation de produits</h4>
                                {{ form_start(form, {'attr': {'role':'form', 'class': 'form'}}) }}
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6" >
                                            <div class="form-group">
                                                {{ form_widget(form.libelle,{'attr':{'class':'form-control','id':'userinput1','placeholder':'Libelle','required':'required'}}) }}
                                                {# <input type="email" class="form-control" placeholder="Website URL">#}
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6">
                                            <div class="form-group">
                                                {{ form_widget(form.categorie,{'attr':{'class':'form-control','id':'userinput2','placeholder':'Categorie','required':'required'}}) }}
                                                {# <input type="email" class="form-control" placeholder="Your Name">#}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="form-group">
                                            {{ form_widget(form.description,{'attr':{'class':'form-control','id':'userinput2','rows':'7','placeholder':'Description'}}) }}
                                            {#<textarea class="form-control" rows="7" placeholder="message"></textarea>#}
                                        </div>
                                    </div>
                                <hr>
                                <div class="col-lg-12 intervention" id="intervention"  data-prototype="{{ image(form.image.vars.prototype)|e('html_attr') }}">
                                    <div class="form-section  col-md-12">

                                        <h4 class=""><i class="fa fa-ticket "></i>Ajoutez des images</h4>

                                    </div>
                                    <div class="row">
                                       <div class="col-4">
                                           <button type="button" data-repeater-create=""
                                                   class="btn btn-secondary  add_intervention">
                                               <i class="fa fa-plus-circle"></i> Ajoutez image
                                           </button>
                                       </div>
                                       <div class="col-8"></div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label class="sr-onl cacher" for="userinput1" style="margin-left:6%;font-weight: bolder">Titre</label>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="sr-onl cacher" for="userinput1" style="margin-left:4%;font-weight: bolder">Description</label>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="sr-onl cacher" for="userinput1" style="margin-left:1%;font-weight: bolder">Image</label>
                                        </div>
                                        <div class="col-md-1">

                                        </div>

                                    </div>
                                    {% for row in form.image %}
                                        <div class="container col-md-12" style="margin-top: 8px">
                                            {{ image(row|e) }}
                                        </div>
                                    {% endfor %}
                                    <span class="after"></span>
                                </div>&nbsp;
                                <hr>
                                  <div class="row">
                                    <div class="col-10"></div>
                                    <div class="col-2">
                                            <button name="submit" type="submit" value="Send" class="btn btn-primary"><span>Soumettre</span></button>
                                    </div>
                                  </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>


{% endblock %}

